+// Store delegate to keep it alive
+static DOCK_MENU_DELEGATE: OnceLock<Retained<AlacrittyAppDelegate>> = OnceLock::new();
+
+// Custom application delegate for dock menu
+declare_class! {
+    struct AlacrittyAppDelegate;
+
+    unsafe impl ClassType for AlacrittyAppDelegate {
+        type Super = NSObject;
+        type Mutability = mutability::MainThreadOnly;
+        const NAME: &'static str = "AlacrittyAppDelegate";
+    }
+
+    impl DeclaredClass for AlacrittyAppDelegate {}
+
+    unsafe impl NSObjectProtocol for AlacrittyAppDelegate {}
+
+    unsafe impl NSApplicationDelegate for AlacrittyAppDelegate {
+        #[method_id(@__retain_semantics Other applicationDockMenu:)]
+        fn application_dock_menu(
+            &self,
+            _sender: &NSApplication,
+        ) -> Option<Retained<NSMenu>> {
+            eprintln!("[Dock Menu] applicationDockMenu: called!");
+            unsafe { create_dock_menu() }
+        }
+    }
+}
+
+// Generate dock menu with window list
+unsafe fn create_dock_menu() -> Option<Retained<NSMenu>> {
+    eprintln!("[Dock Menu] Creating dock menu...");
+    let mtm = MainThreadMarker::new()?;
+    let app = NSApplication::sharedApplication(mtm);
+
+    let menu = NSMenu::new(mtm);
+    eprintln!("[Dock Menu] Menu created");
+
+    // Add each window as menu item
+    let windows = app.windows();
+    for window in windows.iter() {
+        if let Some(title) = window.title() {
+            if !title.is_empty() {
+                let item = NSMenuItem::new(mtm);
+                item.setTitle(&title);
+                item.setTarget(Some(window));
+                item.setAction(Some(objc2::sel!(makeKeyAndOrderFront:)));
+                menu.addItem(&item);
+            }
+        }
+    }
+
+    // Add separator and "New Window" option
+    if !windows.is_empty() {
+        menu.addItem(&NSMenuItem::separatorItem(mtm));
+    }
+
+    let new_item = NSMenuItem::new(mtm);
+    new_item.setTitle(ns_string!("New Window"));
+    menu.addItem(&new_item);
+
+    Some(menu)
+}
+
+// Public function to initialize dock menu
+pub fn setup_dock_menu() {
+    unsafe {
+        if let Some(mtm) = MainThreadMarker::new() {
+            let app = NSApplication::sharedApplication(mtm);
+
+            eprintln!("[Dock Menu] Initializing dock menu support...");
+
+            // Check if there's already a delegate
+            if let Some(existing) = app.delegate() {
+                eprintln!("[Dock Menu] Found existing delegate: {:?}", existing);
+            } else {
+                eprintln!("[Dock Menu] No existing delegate found");
+            }
+
+            let delegate = DOCK_MENU_DELEGATE.get_or_init(|| {
+                eprintln!("[Dock Menu] Creating new AlacrittyAppDelegate");
+                msg_send_id![mtm.alloc::<AlacrittyAppDelegate>(), init]
+            });
+
+            // Set as delegate (will respond to dock menu requests)
+            app.setDelegate(Some(delegate.as_ref()));
+            eprintln!("[Dock Menu] Delegate set successfully");
+        }
+    }
+}
